@model NS.BLOGMGMT.Data.Entities.User

<div class="d-grid gap-3 d-md-block row">
    <div>
      <h3>FullName :</h3>
      <p>@Model.UserFullName</p>
    </div>
    <div>
      <h3>UserName :</h3>
      <p>@Model.UserName</p>
    </div>
    <div>
      <h3>Gender :</h3>
      @if( @Model.Gender == false) { 
        <p>Male</p> } else if ( @Model.Gender == true ) {
        <p>Female</p>
      }
    </div>
    <div>
      <h3>Phone Number :</h3>
      <p>@Model.PhoneNumber</p>
    </div>
    <div>
      <h3>Email : </h3>
      <p>@Model.Email</p>
    </div>
</div>
  <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-secondary">Edit</a>
  <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModal{@Model.UserId}">Delete</button>
<hr>

<div class="modal fade" id="exampleModal{@Model.UserId}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Do you really want to delete the blog ?
      </div>
      <div class="modal-footer">
        <a asp-controller="User" asp-action="Profile" asp-route-id="@Model.UserId" class="btn btn-secondary">No</a>
        <a asp-controller="User" asp-action="DeleteUser" asp-route-id="@Model.UserId" class="btn btn-secondary">Yes</a>
      </div>
    </div>
  </div>
</div>

