@model List<NS.BLOGMGMT.Data.Entities.Blog>
@{
    ViewData["Title"] = "Clean Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="masthead" style="background-image: url('/images/create.jpeg')">
  <div class="container position-relative px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
              <div class="site-heading">
                  <h1>Clean Blog</h1>
                  <a class="subheading text-white fw-bold" asp-controller="Blog" asp-action="Create">Write Your Blogs here !!</a>
              </div>
          </div>
      </div>
  </div>
</header>

<div class="container px-4 px-lg-5">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">S. No</th>
        <th scope="col">Title</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>
      @{int index = 1; }
      @foreach (var item in Model)
      {
        <tr>
          <th scope="row">@index</th>
          <td><a asp-controller="Blog" asp-action="ShowBlog" asp-route-id="@item.BlogId">@item.BlogTitle</a></td>
          @if ( @item.IsPublish == 1 )
          { <td>Published</td> } else if ( @item.IsPublish == 2 ) {
            <td>Rejected</td>
          } else {
            <td>Pending</td>
          }
          <td>
            @if ( @item.IsPublish == 1 || @item.IsPublish == 2){
              @if( @item.IsPublish == 1 ){
                <a asp-controller="Blog" asp-action="Edit" asp-route-id="@item.BlogId" class="btn btn-primary">Edit</a>
              }
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal{@item.BlogId}">Delete</button>
            }       
          </td> 
        </tr>


        <div class="modal fade" id="exampleModal{@item.BlogId}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  Do you really want to delete the blog ?
                </div>
                <div class="modal-footer">
                  <a asp-controller="User" asp-action="Blogs" asp-route-id="@item.BlogId" class="btn btn-secondary">No</a>
                  <a asp-controller="Blog" asp-action="Delete" asp-route-id="@item.BlogId" class="btn btn-secondary">Yes</a>
                </div>
              </div>
            </div>
          </div>
        index++;
      }

    </tbody>
  </table>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
