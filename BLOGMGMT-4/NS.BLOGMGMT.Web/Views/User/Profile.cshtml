@model NS.BLOGMGMT.Data.Entities.User

<header class="masthead" >
  <div class="container position-relative px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
              <div class="site-heading">
                  <h1>Clean Blog</h1>
                  <span class="subheading text-white fw-bold">Your Profile !!</a>
              </div>
          </div>
      </div>
  </div>
</header>

<div class="container px-4 px-lg-5">
  <div class="row gx-4 gx-lg-5 border border-2 p-4">
    <div class="col-md-10 col-lg-8 col-xl-7">
      <div>
        <h5>FullName :</h5>
        <p>@Model.UserFullName</p>
      </div>
      <div>
        <h5>User Name :</h5>
        <p>@Model.UserName</p>
      </div>
      <div>
        <h5>Gender :</h5>
        @if( @Model.Gender == false) { 
          <p>Male</p> } else if ( @Model.Gender == true ) {
          <p>Female</p>
        }
      </div>
      <div>
        <h5>Phone Number :</h5>
        <p>@Model.PhoneNumber</p>
      </div>
      <div>
        <h5>Email : </h5>
        <p>@Model.Email</p>
      </div>
      <div>
        <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-secondary">Edit</a>
        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModal{@Model.UserId}">Delete</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal{@Model.UserId}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Do you really want to delete the blog ?
      </div>
      <div class="modal-footer">
        <a asp-controller="User" asp-action="Profile" asp-route-id="@Model.UserId" class="btn btn-secondary">No</a>
        <a asp-controller="User" asp-action="DeleteUser" asp-route-id="@Model.UserId" class="btn btn-secondary">Yes</a>
      </div>
    </div>
  </div>
</div>

