@model List<NS.BLOGMGMT.Data.Entities.Comment>

<hr>
<h3>Comments</h3>
<div>
  @foreach( var item in Model)
  {
    <div class="border-end-0 bg-secondary bg-opacity-10 p-2 mb-2">
      <h5 class="post-meta">
          @item.Name says
      </h5>
      <h6 class="f6">@item.LastModifiedOn</h6>
      <p> @item.CommentContent </p>
      @if( User.Identity.IsAuthenticated ) {
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal{@item.CommentId}">Delete</button>
        }
    </div>

    <div class="modal fade" id="exampleModal{@item.CommentId}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Do you really want to delete the Comment ?
          </div>
          <div class="modal-footer">
            <a asp-controller="User" asp-action="Blogs" asp-route-id="@item.CommentId" class="btn btn-secondary">No</a>
            <a asp-controller="Blog" asp-action="DeleteComment" asp-route-id="@item.CommentId" class="btn btn-secondary">Yes</a>
          </div>
        </div>
      </div>
    </div>
  }
</div>

